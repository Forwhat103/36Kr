<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/early_item_lv_image"
        android:layout_width="80dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/early_item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/early_item_lv_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/early_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/early_item_lv_image"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/early_item_lv_image"
        android:textColor="@color/colorNewsItemNameAndTime"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/early_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/early_item_lv_image"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/early_item_name_tv"
        android:textColor="@color/colorNewsItemNameAndTime"
        android:textSize="10sp" />
</RelativeLayout>