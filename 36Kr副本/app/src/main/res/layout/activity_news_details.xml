<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/news_details_aty_image"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="15dp" />

                <TextView
                    android:id="@+id/news_details_aty_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/news_details_aty_image"
                    android:layout_toRightOf="@id/news_details_aty_image"
                    android:textColor="@color/colorToolBarText"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/news_details_aty_name_tv"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/news_details_aty_name_tv"
                    android:text="作者"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/news_details_aty_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/news_details_aty_name_tv"
                    android:layout_below="@id/news_details_aty_name_tv"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/colorToolBarText"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/news_details_aty_arrow_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/common_filter_arrow_down" />
            </RelativeLayout>

            <include layout="@layout/parting_line" />

            <TextView
                android:id="@+id/news_details_aty_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:maxEms="14"
                android:text=""
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/news_details_aty_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="@color/colorNewsItemNameAndTime" />

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="30dp"-->
            <!--android:layout_marginTop="30dp"-->
            <!--android:text="『"-->
            <!--android:textColor="@color/colorNewsItemNameAndTime"-->
            <!--android:textSize="15sp" />-->

            <TextView
                android:id="@+id/news_details_aty_summary_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="25dp"
                android:text=""
                android:textColor="@color/colorNewsItemNameAndTime" />

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_marginRight="30dp"-->
            <!--android:text="』"-->
            <!--android:textColor="@color/colorNewsItemNameAndTime"-->
            <!--android:textSize="15sp" />-->

            <TextView
                android:id="@+id/news_details_aty_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"></TextView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>