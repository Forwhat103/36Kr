<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorLoginBackgroundEnd">

        <ImageView
            android:id="@+id/change_code_aty_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_icon_margin_screen"
            android:src="@mipmap/mine_icon_back" />

        <TextView
            android:id="@+id/change_code_aty_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/change_code"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/change_code_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/change_code_aty_user_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_code_margin"
                    android:clickable="true"
                    android:text="@string/user_name"
                    android:textColor="@color/colorNewsItemNameAndTime"
                    android:textSize="@dimen/change_code_text_size" />

                <EditText
                    android:id="@+id/change_code_aty_user_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_code_margin"
                    android:background="@null"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/change_code_text_size"
                    android:visibility="gone" />


            </RelativeLayout>


            <ImageView
                android:id="@+id/change_code_aty_delete_user_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_code_margin"
                android:clickable="true"
                android:src="@mipmap/login_icon_delete"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@color/login_fragment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/change_code_aty_code_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_code_margin"
                    android:text="@string/code_"
                    android:textColor="@color/colorNewsItemNameAndTime"
                    android:textSize="@dimen/change_code_text_size" />

                <EditText
                    android:id="@+id/change_code_aty_code_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_code_margin"
                    android:background="@null"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/change_code_text_size"
                    android:visibility="gone" />


            </RelativeLayout>


            <ImageView
                android:id="@+id/change_code_aty_code_delete_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_code_margin"
                android:clickable="true"
                android:src="@mipmap/login_icon_delete"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/change_code_aty_code_eye_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginTop="@dimen/change_code_margin"
                android:background="@drawable/selector_eye"
                android:button="@null"
                android:clickable="true"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@color/login_fragment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/change_code_aty_sure_code_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_code_margin"
                    android:text="@string/code"
                    android:textColor="@color/colorNewsItemNameAndTime"
                    android:textSize="@dimen/change_code_text_size" />

                <EditText
                    android:id="@+id/change_code_aty_sure_code_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_code_margin"
                    android:background="@null"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/change_code_text_size"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/change_code_aty_sure_code_delete_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_code_margin"
                android:src="@mipmap/login_icon_delete" />

            <CheckBox
                android:id="@+id/change_code_aty_sure_code_eye_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginTop="@dimen/change_code_margin"
                android:background="@drawable/selector_eye"
                android:button="@null"
                android:clickable="true"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@color/login_fragment" />

        <TextView
            android:id="@+id/change_code_aty_sure_change_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/selector_button"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/sure_change"
            android:textColor="@drawable/selector_text" />
    </LinearLayout>
</LinearLayout>