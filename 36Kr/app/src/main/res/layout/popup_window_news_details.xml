<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorKrTvBackground"
    android:orientation="vertical">

    <include layout="@layout/parting_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_details_popup_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="篇"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:text="文章总数"
                android:textColor="@color/colorNewsItemNameAndTime" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_details_popup_click_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="万"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:text="总计浏览量"
                android:textColor="@color/colorNewsItemNameAndTime" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/parting_line_height"
            android:layout_weight="1"
            android:background="@color/colorPartingLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:text="最新文章"
            android:textColor="@color/colorNewsItemNameAndTime" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/parting_line_height"
            android:layout_weight="1"
            android:background="@color/colorPartingLine" />
    </LinearLayout>

    <ListView
        android:id="@+id/news_details_popup_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:divider="@null"
        android:padding="15dp"></ListView>

    <View
        android:id="@+id/news_details_popup_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>

</LinearLayout>