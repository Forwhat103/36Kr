<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recent_event_item_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recent_event_item_image"
        android:layout_marginTop="@dimen/login_quit_margin_screen"
        android:layout_marginRight="@dimen/mine_fragment_margin"
        android:layout_marginLeft="@dimen/mine_fragment_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/recent_event_item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mine_fragment_margin"
        android:layout_marginRight="@dimen/mine_fragment_margin"
        android:layout_marginBottom="@dimen/find_fragment_mar"
        android:textColor="@color/colorNewsItemContent"
        android:textSize="@dimen/setting_text_size" />

    <TextView
        android:id="@+id/recent_event_item_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mine_fragment_margin"
        android:layout_marginRight="@dimen/mine_fragment_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:textColor="@color/colorNewsItemNameAndTime"
        android:textSize="@dimen/find_recent_aty_kind_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/login_quit_margin_screen"
        android:layout_marginLeft="@dimen/mine_fragment_margin"
        android:layout_marginRight="@dimen/mine_fragment_margin">

        <TextView
            android:id="@+id/recent_event_item_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_activity_apply"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/news_item_name_size" />

        <ImageView
            android:layout_width="@dimen/mine_fragment_margin"
            android:layout_height="@dimen/mine_fragment_margin"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/mine_fragment_margin"
            android:src="@mipmap/common_icon_location" />

        <TextView
            android:id="@+id/recent_event_item_place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cycle_view_ball_size"
            android:textSize="@dimen/news_item_name_size" />

        <TextView
            android:id="@+id/recent_event_item_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/colorNewsItemNameAndTime"
            android:textSize="@dimen/news_item_name_size" />
    </LinearLayout>


</LinearLayout>