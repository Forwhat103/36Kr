<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_aty_search_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/setting_margin_screen"
            android:clickable="true"
            android:src="@mipmap/search_nav_icon_search" />

        <EditText
            android:id="@+id/search_aty_input_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/setting_margin_screen"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/search_aty_input_et"
            android:singleLine="true"
            android:textColorHint="@color/colorNewsItemNameAndTime"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/search_aty_delete_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/normal_margin"
            android:src="@mipmap/login_icon_delete"
            android:visibility="gone" />

        <TextView
            android:id="@+id/search_aty_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/setting_margin_screen"
            android:text="取消"
            android:textColor="@color/colorTabBarText"
            android:textSize="18sp" />
    </LinearLayout>

    <include layout="@layout/parting_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/search_aty_no_record_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:src="@mipmap/search_ph_search" />

            <TextView
                android:id="@+id/search_aty_no_record_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="280dp"
                android:text="@string/search_aty_no_record_tv"
                android:textColor="@color/colorNewsItemNameAndTime"
                android:textSize="@dimen/change_code_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/search_aty_news_ll"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/setting_margin_screen"
                    android:paddingRight="@dimen/setting_margin_screen"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/search_news"
                        android:textColor="@color/colorNewsItemNameAndTime"
                        android:textSize="@dimen/setting_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/equity_icon_list_arrow" />
                </LinearLayout>

                <include layout="@layout/parting_line" />

                <LinearLayout
                    android:id="@+id/search_aty_user_ll"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/setting_margin_screen"
                    android:paddingRight="@dimen/setting_margin_screen"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/relate_user"
                        android:textColor="@color/colorNewsItemNameAndTime"
                        android:textSize="@dimen/setting_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/more"
                        android:textColor="@color/colorNewsItemNameAndTime" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/equity_icon_list_arrow" />
                </LinearLayout>


                <include layout="@layout/parting_line" />

                <LinearLayout
                    android:id="@+id/search_aty_company_ll"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/setting_margin_screen"
                    android:paddingRight="@dimen/setting_margin_screen"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/company"
                        android:textColor="@color/colorNewsItemNameAndTime"
                        android:textSize="@dimen/setting_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/more"
                        android:textColor="@color/colorNewsItemNameAndTime" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/equity_icon_list_arrow" />
                </LinearLayout>

                <include layout="@layout/parting_line" />

                <LinearLayout
                    android:id="@+id/search_aty_organization_ll"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/setting_margin_screen"
                    android:paddingRight="@dimen/setting_margin_screen"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/relate_organization"
                        android:textColor="@color/colorNewsItemNameAndTime"
                        android:textSize="@dimen/setting_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/more"
                        android:textColor="@color/colorNewsItemNameAndTime" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/equity_icon_list_arrow" />
                </LinearLayout>

                <include layout="@layout/parting_line" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>