<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorTabBarText"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/find_tool_bar_search_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/find_tool_bar_search_margin_screen"
        android:background="@drawable/shape_search_frame"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/find_tool_bar_search_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/discovery_icon_search_white" />

            <TextView
                android:id="@+id/find_tool_bar_search_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_icon_margin_screen"
                android:layout_toRightOf="@id/find_tool_bar_search_iv"
                android:text="@string/search"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/tool_bar_setting_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/title_icon_margin_screen"
        android:src="@mipmap/mine_icon_setting" />
</LinearLayout>