<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:title=" ">

    <TextView
        android:id="@+id/tool_bar_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="@string/title_name"
        android:textColor="@color/colorToolBarText"
        android:textSize="@dimen/title_text_size" />

    <ImageView
        android:id="@+id/tool_bar_search_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/title_icon_margin_screen"
        android:src="@mipmap/title_bar_search" />

    <LinearLayout
        android:id="@+id/find_tool_bar_search_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/find_tool_bar_search_margin_screen"
        android:background="@drawable/shape_search_frame"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/find_tool_bar_search_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/discovery_icon_search_white" />

            <TextView
                android:id="@+id/find_tool_bar_search_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_icon_margin_screen"
                android:layout_toRightOf="@id/find_tool_bar_search_iv"
                android:text="搜索"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/tool_bar_setting_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/title_icon_margin_screen"
        android:src="@mipmap/mine_icon_setting" />

</android.support.v7.widget.Toolbar>