<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/invest_item_lv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_quit_margin_screen"
        android:layout_marginRight="@dimen/login_quit_margin_screen"
        android:textColor="@color/colorToolBarText"/>

    <TextView
        android:id="@+id/invest_item_lv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/login_quit_margin_screen"
        android:layout_marginRight="@dimen/login_quit_margin_screen"
        android:textColor="@color/colorToolBarText"/>
</RelativeLayout>